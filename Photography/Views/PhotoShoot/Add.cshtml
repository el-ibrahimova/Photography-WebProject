@using Photography.Core.ViewModels.PhotoShoot
@model AddPhotoShootViewModel

@{
    ViewBag.Title = "Добави фотосесия";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
           
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Име</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl1" class="form-label-add-edit">URL адрес</label>
                <input asp-for="@Model.ImageUrl1" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl2" class="form-label-add-edit">URL адрес</label>
                <input asp-for="@Model.ImageUrl2" class="form-control" aria-required="false" />
                <span asp-validation-for="@Model.ImageUrl2" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl3" class="form-label-add-edit">URL адрес</label>
                <input asp-for="@Model.ImageUrl3" class="form-control" aria-required="false" />
                <span asp-validation-for="@Model.ImageUrl3" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Описание</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CreatedAt" class="form-label-add-edit">Дата на създаване</label>
                <input asp-for="@Model.CreatedAt" class="form-control" type="datetime-local" aria-required="true" />
                <span asp-validation-for="@Model.CreatedAt" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}