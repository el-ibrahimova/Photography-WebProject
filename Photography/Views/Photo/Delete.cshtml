@using Photography.Core.ViewModels.Photo
@model DeleteViewModel
 
@{
    ViewData["Title"] = "Изтрий снимка";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.TagUser</h3>
                <p class="mb-0"><strong>Принадлежи на:</strong> @Model.Owner</p>
                <p class="text-danger mt-3">Сигурни ли сте, че искате да изтриете снимката"?</p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserOwnerId" />
                    <input type="hidden" asp-for="@Model.UserPhotographerId" />

                    <button type="submit" class="btn btn-danger">Да</button>
                    <a asp-controller="Photo" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">Отказ</a>
                </form>
            </div>
        </div>
    </div>
</div>