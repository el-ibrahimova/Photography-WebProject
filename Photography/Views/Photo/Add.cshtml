@using Photography.Core.ViewModels.Photo
@model AddPhotoViewModel

@{
    ViewBag.Title = "Добави снимка";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">URL адрес</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="dd/MM/yyyy HH:mm" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit">Име на снимката</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Описание</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.UploadedAt" class="form-label-add-edit">Дата на качване</label>
                <input asp-for="@Model.UploadedAt" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.UploadedAt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Избери категория</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    <option disabled selected value="">Избери категория...</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>

            <label for="isPrivate">Частна снимка:</label>
            <input type="checkbox" id="isPrivate" name="IsPrivate" onchange="toggleUserDropdown(this.checked)" />

            <div class="mb-3" id="userDropdown" style="display: none;">
                <label asp-for="@Model.UserOwnerId" class="form-label-add-edit">Избери потребител...</label>
                <select asp-for="@Model.UserOwnerId" class="form-control" aria-required="true">
                    <option disabled selected value="">Избери потребител...</option>
                    @foreach (var user in Model.UserOwner)
                    {
                        <option value="@user?.Id">@user?.UserName</option>
                    }
                </select>
                <span asp-validation-for="@Model.UserOwnerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>

<script>
    function toggleUserDropdown(isPrivate) {
        document.getElementById("userDropdown").style.display = isPrivate ? "block" : "none";
    }
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}