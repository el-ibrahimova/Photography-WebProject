@using Photography.Core.ViewModels.Photo
@using System.Security.Claims
@model DetailsViewModel

@{
    ViewBag.Title = "Детайли";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);

}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="row justify-content-center" style="margin: 0 auto; max-width: 1200px;">
    <div class="col-md-12 text-center">
        <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" />
    </div>


    <div class="col-md-12">
        <div class="card-body">
            <h5 class="card-title">Таг: @Model.TagUser</h5>
            <p class="card-text">Добавена на: @Model.UploadedAt</p> 
            <p class="mb-0"><strong>Принадлежи на:</strong> @Model.Owner</p>

            @if (!Model.IsPrivate)
            {
                <h5 class="card-title">Рейтинг: @Model.Rating</h5>
            }

            <p class="card-title">@Model.Description</p>
            <hr />
      
        </div>

        <div>
            <strong>Категории:</strong>
            @if (Model.Categories.Any())
            {
                <ul>
                    @foreach (var category in Model.Categories)
                    {
                        <li>@category</li>
                    }
                </ul>
            }
            else
            {
                <p>Няма категории</p>
            }
        </div>


        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Gallery" asp-action="Gallery" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Върни се</a>


                @if (User?.Identity?.IsAuthenticated == true && currentUserId == @Model.UserOwnerId.ToString() && @Model.IsDeleted == false)
                {
                    <a asp-controller="Photo" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1">Изтрий</a>
                    <a asp-controller="Photo" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Редактирай</a>

                    <form asp-controller="Photo" asp-action="AddToFavorite" method="post" class="d-flex justify-content-center align-items-center flex-fill mx-1">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success w-100">Добави в любими</button>
                    </form>
                }

                @if (User.IsInRole("Administrator") && @Model.IsDeleted == false)
                {

                }

            </div>
        </div>
    </div>
</div>