@using Photography.Core.ViewModels.Photo
@model IEnumerable<FavoriteViewModel>

@{
    ViewData["Title"] = "Любими";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />


@foreach (var photo in Model)
{
    <div class="row align-items-center mb-4 py-3" style="border-bottom: 1px solid #ccc;">
        <div class="col-md-2 text-center">
           <img src="@photo.ImageUrl" class="img-fluid" style="max-height: 100px; object-fit: contain;"  />
           
        </div>
        <div class="col-md-4 text-start">
            <h5 class="mb-0">@photo.Title</h5>
        </div>
        <div class="col-md-2 text-start">
            <h5 class="mb-0">@photo.Rating</h5>
        </div>
        <div class="col-md-4 text-end">
            <form asp-controller="Photo" asp-action="RemoveFromFavorite" asp-route-id="@photo.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Премахни от любими</button>
            </form>
        </div>
        <div class="col-md-4 text-end">
            <form asp-controller="Photo" asp-action="Order" asp-route-id="@photo.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Поръчай</button>
            </form>
        </div>

    </div>
} 