@using Photography.Core.ViewModels.Photo
@using System.Security.Claims
@model IEnumerable<MyGalleryViewModel>

@{
    ViewBag.Title = "Галерия";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var photo in Model)
    {
        var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (photo.IsPrivate && photo.UserOwnerId == currentUserId)
        {
            <div class="card col-4" style="width: 20rem; ">
                <div class="card-body">
                    <h4 class="card-title mt-1">@photo.Title</h4>
                    <img class="card-img-top" src=@photo.ImageUrl alt="Image">
                </div>

                <a asp-controller="Photo" asp-action="Details" asp-route-id="@photo.Id" class="btn btn-warning w-100 mb-2">Детайли</a>

                <form asp-controller="Photo" asp-action="AddToFavorite" method="post">
                    <input type="hidden" name="id" value="@photo.Id" />
                    <button type="submit" class="btn btn-success w-100">Добави в любими</button>
                </form>
            </div>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}