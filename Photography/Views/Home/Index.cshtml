@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <style>
        .Courgette-font {
            font-family: 'Courgette', sans-serif;
        }

        .carousel-container {
            display: flex;
            justify-content: center; /* Центрира по хоризонталната ос */
            align-items: center; /* Центрира по вертикалната ос */
           
        }
        /* Стил за изображенията в карусела */
        .carousel-item img {
            max-height: 550px; /* Максимална височина на изображенията */
            width: 100%; /* Ширина да запълва контейнера на карусела */
            object-fit: cover; /* Задава как изображението да се вписва в контейнера */
        }

        /* Стил за карусела */
        #carouselExampleFade {
            width: 80%; /* Ширина на карусела */
            max-width: 800px; /* Максимална ширина на карусела */
        }
    </style>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4 Courgette-font">Welcome to my place</h1>
    </div>

    <div class="carousel-container">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/1.jpg" alt="Image 1" onclick="nextSlide()">
                </div>
                <div class="carousel-item">
                    <img src="images/2.jpg" alt="Image 2" onclick="nextSlide()">
                </div>
                <div class="carousel-item">
                    <img src="images/3.jpg" alt="Image 3" onclick="nextSlide()">
                </div>
            </div>
        </div>
    </div>

    <script>
        // Функция за преминаване към следващ слайд
        function nextSlide() {
            const carousel = new bootstrap.Carousel(document.getElementById('carouselExampleFade'));
            carousel.next();
        }
    </script>
</body>