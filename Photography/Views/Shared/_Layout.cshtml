@using static Photography.Common.ApplicationConstants
@using Photography.Core.Services
@using Photography.Extensions
@using Photography.Core.Interfaces
@inject IBaseService baseService

@{
    // check for current year and use it in the footer
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear)
        ? $"{currentYear}"
        : $"{ReleaseYear}-{currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Photography</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <link rel="stylesheet" href="~/css/myCssTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="icon" type="image/png" sizes="25x10" href="~/images/nies-logo.png">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">NIES Photography</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>

                        @if (!this.User?.Identity?.IsAuthenticated ?? false)
                        {
                            @if(baseService.IsUserPhotographerAsync(this.User.GetUserId()))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Фотограф
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="photographerDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Photo" asp-action="Add">Добави снимки</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Gallery" asp-action="MyGallery"> Моята галерия</a></li>
                                    </ul>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Gallery" asp-action="Gallery">Галерия</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Gallery" asp-action="MyGallery">Моята Галерия</a>
                            </li>
                          <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Photo" asp-action="Favorite">Любими</a>
                            </li>
                         
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Order" asp-action="OrderList">Кошница</a>
                            </li>
                        }
                        <form class="d-flex">
                            <input class="form-control me-sm-2" type="search" placeholder="Търси">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Търси</button>
                        </form>

                        
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @footerNote - NIES Photography
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
